<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/squad"
    tools:context="com.swamphacks.squad.GroupActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/people"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="142dp"
        android:layout_height="120dp"
        android:src="@drawable/plus"
        android:id="@+id/imageButton2"
        android:tintMode="src_atop"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/joinView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Join a group"
        android:textColor="#f1ecec"
        android:id="@+id/joinView"
        android:layout_below="@+id/imageButton"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Form Squad"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:textColor="#f2f2f2"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
